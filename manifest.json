{
  "manifest_version": 3,
  "name": "Implicit Feedback Capture",
  "version": "1.0",
  "description": "Captures implicit feedback on web pages.",
  "action": {
    "default_title": "Implicit Feedback Capture"
  },
  "permissions": ["sidePanel", "activeTab", "storage", "bookmarks", "tabs", "scripting", "https://feedback.sekimbi.com/*"],
   "side_panel": {
    "default_path": "sidepanel.html"
  },
  "background": {
    "service_worker": "js/background.js",
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": ["https://*/*", "http://*/*"],
      "js": ["js/jquery.min.js", "js/content.js", "js/mouseDistance.js"],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "48": "icon/48.png"
  }
  
}
